/* pages/addpeople/addpeople.wxss */

.page {
  width: 100%;
}
/* 标题栏 */
.title {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 35rpx;
  padding-top: 50rpx;
  padding-left: 140rpx;
  color: #54baa3;
  font-weight: bold;
}

.title-icon {
  width: 100%;
  height: 100%;
}

.title-notes {
  font-size: 30rpx;
  font-weight: normal;
  color: #ccc;
}
/* 分割线 */
.line {
  width: 90%;
  margin-left: 40rpx;
  padding-top: 50rpx;
  border-bottom: 1rpx solid #c0c0c0;
}

.infomodule {
  width: 100%;
}
/* 照片 */
.infoimg {
  position: absolute;
  padding-left: 60rpx;
  padding-top: 20rpx;
  width: 100%;
}
/* 称谓 */
.infotitle {
  position: absolute;
  margin-top: 10rpx;
  padding-left: 220rpx;
  font-size: 40rpx;
  font-weight: bold;
}
/* 小字信息 */
.infosex {
  position: absolute;
  margin-top: 20rpx;
  padding-left: 370rpx;
  font-size: 25rpx;
  font-weight: normal;
  color: #707070;
}
/* 没数据时提示 */
.emptyhint {
  display: flex;
  flex-direction: column;
  padding-top: 150rpx;
  text-align: center;
  font-size: 30rpx;
  color: #ccc;
}
