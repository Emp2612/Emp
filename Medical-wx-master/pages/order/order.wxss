/* pages/order/order.wxss */

/* 快捷预约wxss */

.page {
  width: 650rpx;
  padding-left: 70rpx;
}

.search {
  width: 600rpx;
  padding: 10rpx 15rpx 10rpx 15rpx;
  border: 1px solid #aaa;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin-top: 60rpx;
  margin-bottom: 80rpx;
}

.search-icon {
  width: 100%;
  height: 100%;
  position: absolute;
  margin-top: 15rpx;
  margin-left: 580rpx;
}

.itemView {
  margin-top: 40px;
  display: flex;
  align-items: center;
  align-content: center;
  font-family: Microsoft YaHei;
  font-size: 35rpx;
  font-weight: 600;
  letter-spacing: 10rpx;
  color: #000;
}

.select {
  display: flex;
  margin-left: 60rpx;
  width: 250rpx;
  padding: 10rpx 15rpx 10rpx 15rpx;
  border: 1px solid #aaa;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: normal;
  letter-spacing: 0rpx;
}

.select-picker {
  display: flex;
  margin-left: 30rpx;
  border: 1px solid #aaa;
  width: 280rpx;
  padding: 15rpx 15rpx 15rpx 15rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: normal;
  color: #524f4f;
  letter-spacing: 0rpx;
}

.sbmbtn {
  overflow: hidden;
  margin-top: 100rpx;
  padding-left: 115rpx;
  width: 400rpx;
}
