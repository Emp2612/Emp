/* pages/homepage/homepage.wxss */
.homepage{
  width: 100%;
}
.swiper {
  width: 100%;
  height: 100%;
  margin: 0rpx;
}

.swiper image {
  display: inline;
}

/* 导航条 */

.nav_top {
  display: flex;
}

.nav_top_items {
  text-align: center;
  font-size: 30rpx;
  width: 50%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.nav_top_items image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  display: inline-block;
}

.category-title {
  display: flex;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  margin-left: 20rpx;
  border-bottom: 2rpx solid #ddd;
  line-height: 60rpx;
}

.category-title .name {
  font-size: 30rpx;
  font-weight: 900;
}

/* 推荐列表项 */

.nav_section {
  width: 100%;
}

.nav_section_items {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid #ddd;
  position: relative;
}

.nav_section_items:active {
  background: #ddd;
}

.nav_section_items .section_image {
  width: 170rpx;
  height: 160rpx;
}

.nav_section_items .section_image image {
  width: 100%;
  height: 100%;
}

.nav_section_items .section_cont {
  width: 450rpx;
  font-weight:normal;
  font-size: 25rpx;
  color: #a9a9a9;
}

.nav_section_items .section_cont view {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

.nav_section_items .section_cont .section_cont_intro {
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.nav_section_items .section_cont .section_cont_sub {
  font-size: 30rpx;
  font-weight:bold;
  line-height: 60rpx;
  color: #000;
  margin-bottom: 10rpx;
}

.nav_section_items .section_cont .section_cont_price {
  font-size: 28rpx;
  text-align: right;
   width:150px; 
  color: #d24a58;
}

.nav_section_items .section_cont .section_cont_scale {
  font-size: 28rpx;
  text-align: left;
  padding: 3px 4px;
  background: #88ddca;
  border-radius: 6px;
  -moz-border-radius: 20px;
  color: #fff;
}

