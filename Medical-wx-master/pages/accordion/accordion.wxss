/* pages/accordion/accordion.wxss */
.page{
  width: 100%;
}
/* 信息选择 */

.item {
  width: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-top: 50rpx;
}

.item-title {
  font-size: 33rpx;
  font-weight: bold;
  color: #000;
}

.item-btn {
  border: 1px solid #000;
  height: 80rpx;
  width: 130rpx;
  margin-left: 5rpx;
  /* float: left; */
  padding-top: 5px;
}

.item-btn-ss {
  display: flex;
  flex-direction: row;
  padding-top: 30rpx;
  padding-left: 32rpx;
  align-items: center;
}

.item-btn-time {
  line-height: 18rpx;
  font-size: 20rpx;
  /* width: 100%; */
  height: 20px;
  text-align: left;
  padding-top: 8rpx;
  padding-left: 12rpx;
  float: left;
}

.statemodel {
  display: flex;
  flex-direction: row;
}

.triangle {
  width: 0;
  height: 0;
  border-width: 30rpx;
  border-style: solid;
  border-color: transparent transparent #3cf transparent;
}

.triangle-position {
  padding-left: 40rpx;
}

/* 预约日期选择模块 */

.spanpage {
  width: 88%;
  height: 250rpx;
  border: 1px solid #3cf;
  border-radius: 25rpx;
  background-color: #3cf;
  margin-top: 20rpx;
  margin-left: 45rpx;
  align-items: center;
  margin-bottom: 10rpx;
}

.spanpage-title {
  width: 300rpx;
  font-size: 30rpx;
  color: #000;
}

.spanpage-title-ss {
  width: 60%;
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
  margin-left: 130rpx;
}

.spanpage-line {
  margin-top: 20rpx;
  margin-left: 15rpx;
  width: 95%;
  height: 2rpx;
  background: #fff;
}

.spanpage-radio {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  font-size: 30rpx;
  color: #000;
}

.spanpage-btn {
  margin-top: 25rpx;
  margin-left: 260rpx;
  text-align: center;
  width: 120rpx;
  height: 60rpx;
  background-color: #30c4a2;
  border: 1px solid #3cf;
  border-radius: 10rpx;
}

.spanpage-btn-text {
  font-size: 30rpx;
  align-items: center;
  color: #fff;
}

.tui-xiajiantou:after {
  font-family: "iconfont" !important;
  content: '\e733';
  font-size: 40rpx;
  position: absolute;
  top: 50%;
  display: inline-block;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  text-decoration: none;
  right: 10rpx;
}

.tui-shangjiantou:after {
  font-family: "iconfont" !important;
  content: '\e734';
  font-size: 40rpx;
  position: absolute;
  top: 50%;
  display: inline-block;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  text-decoration: none;
  right: 10rpx;
}

.tui-show {
  display: block;
}

.tui-hide {
  display: none;
}
