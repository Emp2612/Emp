.title1_footer {
  color: #686868;
  font-size: 30rpx;
  text-align: center;
  margin-top: 10rpx;
  border-bottom: 2rpx solid #ddd;
  line-height: 60rpx;
}

/* 信息词条 */

.massage {
  display: flex;
  direction:row;
  justify-content: space-between;
  border-bottom: 2rpx solid #ddd;
