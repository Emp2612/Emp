.page {
  width: 100%;
}

/* 标题 */

.title {
  font-size: 38rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 40rpx;
}

.qrcode {
  margin-left: 220rpx;
  padding: 30rpx 20rpx 10rpx 20rpx;
}

/* 二维码 */

.qrcode image {
  width: 265rpx;
  height: 265rpx;
}

/* 扫码关注 */

.title1 {
  font-size: 33rpx;
  text-align: center;
  margin-top: 20rpx;
}

